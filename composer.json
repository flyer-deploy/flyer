{
  "require-dev": {
    "phpunit/phpunit": "^10.2"
  },
  "require": {
    "symfony/yaml": "^6.3",
    "deployer/deployer": "^7.3"
  },
  "scripts": {
    "test:dep": "DEP_BIN=$(which dep) phpunit tests/FlyerTest.php",
    "test": "phpunit",
    "dep": "dep"
  },
  "autoload": {
    "psr-4": {
      "Flyer\\": "src/",
      "Flyer\\Packages\\": "packages/",
      "Flyer\\Tests\\": "tests/"
    },
    "files": [
      "src/Utils/Common.php",
      "src/Utils/Filesystem.php",
      "src/Utils/Path.php",
      "src/Utils/Substitute.php"
    ]
  }
}
